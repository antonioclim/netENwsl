{
  "baseline": {
    "description": "Allow forwarding and allow ICMP, TCP_APP_PORT and UDP_APP_PORT",
    "forward_policy": "ACCEPT",
    "rules": [
      {"chain": "FORWARD", "proto": "icmp", "action": "ACCEPT"},
      {"chain": "FORWARD", "proto": "tcp", "dport": 9090, "action": "ACCEPT"},
      {"chain": "FORWARD", "proto": "udp", "dport": 9091, "action": "ACCEPT"}
    ]
  },
  "block_tcp_9090": {
    "description": "Reject TCP on port 9090 while leaving UDP and ICMP untouched",
    "forward_policy": "ACCEPT",
    "rules": [
      {"chain": "FORWARD", "proto": "tcp", "dport": 9090, "action": "REJECT"}
    ]
  },
  "block_udp_9091": {
    "description": "Drop UDP on port 9091 while leaving TCP and ICMP untouched",
    "forward_policy": "ACCEPT",
    "rules": [
      {"chain": "FORWARD", "proto": "udp", "dport": 9091, "action": "DROP"}
    ]
  },
  "mixed_filtering": {
    "description": "Mixed policy: reject TCP 9090, allow UDP 9091, allow ICMP",
    "forward_policy": "DROP",
    "rules": [
      {"chain": "FORWARD", "proto": "icmp", "action": "ACCEPT"},
      {"chain": "FORWARD", "proto": "tcp", "dport": 22, "action": "DROP"},
      {"chain": "FORWARD", "proto": "tcp", "dport": 80, "action": "DROP"},
      {"chain": "FORWARD", "proto": "tcp", "dport": 443, "action": "DROP"},
      {"chain": "FORWARD", "proto": "tcp", "dport": 8080, "action": "DROP"},
      {"chain": "FORWARD", "proto": "tcp", "dport": 9090, "action": "REJECT"},
      {"chain": "FORWARD", "proto": "udp", "dport": 9091, "action": "ACCEPT"}
    ]
  }
}
