      "learningObjective": "LO2",
      "difficulty": "medium",
      "points": 1,
      "timeLimit": 45,
      "stem": {"format": "html", "content": "<p>De ce TLS 1.3 nu este backwards-compatible cu TLS 1.0/1.1?</p>"},
      "choices": [
        {"id": "a", "content": "Folosește porturi diferite", "correct": false},
        {"id": "b", "content": "A eliminat cipher suites vechi și nesigure", "correct": true},
        {"id": "c", "content": "Necesită hardware special", "correct": false},
        {"id": "d", "content": "Funcționează doar cu IPv6", "correct": false}
      ],
      "feedback": {
        "correct": "Corect! TLS 1.3 a eliminat RSA key exchange, CBC, SHA-1.",
        "incorrect": "TLS 1.3 a eliminat algoritmi nesiguri."
      },
      "tags": ["tls", "versions"]
    },
